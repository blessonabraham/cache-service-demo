{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "dist",
      "sourceMap": true,
      "esModuleInterop": true,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true
    },
    "include": [
      "src/**/*.ts",
      "index.ts",
      "test/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }